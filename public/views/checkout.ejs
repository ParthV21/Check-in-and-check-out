<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Check Out</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css">
</head>
<body>
    <div class="container">
        <h1 class="mt-5 text-center">Check-In/Check-Out System</h1>
        <div class="d-flex justify-content-center mt-5">
            <a href="/checkin" class="btn btn-primary btn-lg mr-3">Check In</a>
            <a href="/checkout" class="btn btn-secondary btn-lg mr-3">Check Out</a>
            <a href="/log" class="btn btn-info btn-lg">Log</a>
        </div>

        <div class="row mt-5 justify-content-center">
            <div class="col-md-4">
                <h2 class="text-center">Check Out</h2>
                <% if (errorMessage) { %>
                    <div class="alert alert-danger" role="alert">
                        <%= errorMessage %>
                    </div>
                <% } %>
                <form action="/checkout" method="post" class="mb-3">
                    <div class="form-group">
                        <label for="user">Select User</label>
                        <select class="form-control" id="user" name="user" required>
                            <% uniqueUsers.forEach(user => { %>
                                <option value="<%= user %>"><%= user %></option>
                            <% }); %>
                        </select>
                    </div>
                    <button type="submit" class="btn btn-secondary btn-block">Check Out</button>
                </form>
            </div>
        </div>
    </div>
    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"></script>
</body>
</html>
